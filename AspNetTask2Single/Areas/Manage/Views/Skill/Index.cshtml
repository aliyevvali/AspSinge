@model List<Skills>
@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="create" asp-controller="Skill" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">WorkFlow</th>
                <th scope="col">Images</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.WorkFlow</td>
                    <td><img src="~/imgs/skill/" style="max-width:100px"width="50px" height="50px" /></td>
                    <td>
                        <a asp-action="edit" asp-controller="Skill" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="delete" asp-controller="Skill" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

