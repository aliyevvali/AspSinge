@model List<Interests>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="create" asp-controller="Interests" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Interest</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Interest</td>
                    @*<td><img src="~/image/bg-images/" style="max-width:100px" /></td>*@
                    <td>
                        <a asp-action="edit" asp-controller="Interests" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="delete" asp-controller="Interests" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
