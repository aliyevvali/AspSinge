@model List<AboutMe>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="create" asp-controller="About" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Title</th>
                <th scope="col">Adress</th>
                <th scope="col">Contact</th>
                <th scope="col">Email</th>
                <th scope="col">Images</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>


            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td>@item.Adress</td>
                <td>@item.Contact</td>
                <td>@item.Email</td>
                <td><img src="~/imgs/aboutme/@item.Image" style="max-width:100px" width="50px" height="50px" /></td>
                <td>
                    <a asp-action="edit" asp-controller="About" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="delete" asp-controller="About" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                </td>
            </tr>
            }



        </tbody>
    </table>
</div>


